<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.choonage.LoginActivity"
    tools:ignore="MergeRootFrame"
    android:background="@color/chred" >
    
    <TextView
        android:id="@+id/testtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    
    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="@string/enterPassword"
        android:inputType="textPassword"
        android:background="@color/white" 
	/> 

    <EditText
        android:id="@+id/enterUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/enterPassword"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="@string/enterUsername"
        android:background = "@color/white" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonLogin"
        android:onClick="login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enterUsername"
        android:layout_alignRight="@+id/enterPassword"
        android:layout_below="@+id/enterPassword"
        android:layout_marginTop="64dp"
        android:text="Login"
        android:background = "@color/white" />
</RelativeLayout>
